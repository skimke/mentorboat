<div class="profile">
  <div class="card">
    <h2 class="card-header h5">
    <% if current_user == @user %>My<% else %>
      <%= @user.first_name %>'s
    <% end %> <%= t(".title")%>
    </h2>
    <div class="card-body">
      <% if @user.requires_details? && current_user == @user %>
        <%= render partial: '/users/details_form', object: @user %>
      <% else %>
        <%= render partial: '/users/details', object: @user %>
      <% end %>
    </div>

    <div class="card-body other-links">
      <% if current_user == @user %>
        <p><%= link_to t(".change_password"),
        edit_user_password_url(current_user) %></p>
        <p><%= link_to t(".edit"), edit_user_url(current_user) %></p>
      <% else %>
        <p><%= link_to t(".show"), user_path(current_user) %></p>
      <% end %>
    </div>
  </div>
</div>
