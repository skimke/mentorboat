<div class="profile card">
  <h2 class="card-header h5"><%= t(".title") %></h2>

  <div class="card-body">
    <div class="user-edit">
      <%= form_for @user do |form| %>
        <div class="form-group">
          <%= form.label :first_name, class: 'bmd-label-floating'  %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: 'bmd-label-floating'  %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email, class: 'bmd-label-floating'  %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <%= render partial: '/users/details_form', object: @user %>
      <% end %>
    </div>

    <div class="other-links">
      <%= link_to t(".cancel"), user_path(@user) %>
    </div>
  </div>
</div>
