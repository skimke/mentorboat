<div class="details">
  <div>
    <p>Name: <%= @user.name %></p>
  </div>
  <div>
    <p>Email: <%= @user.email %></p>
  </div>
  <div>
    <p>Position: <%= @user.position %></p>
  </div>
  <div>
    <p>Company: <%= @user.company %></p>
  </div>
  <div>
    <p>Experience (years): <%= @user.experience %></p>
  </div>

  <div>
    <p><%= link_to t(".link_text", default: "Change my password"),
    edit_user_password_url(@user, token: @user.confirmation_token.html_safe) %></p>
  </div>
</div>
